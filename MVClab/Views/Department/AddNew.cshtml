@model MVClab.Models.Department

<h2>Add New Department</h2>

<form asp-action="AddNew" method="post">
    <div class="form-group">
        <label asp-for="deptName"></label>
        <input asp-for="deptName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Manager"></label>
        <input asp-for="Manager" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" placeholder="EG or USA" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
